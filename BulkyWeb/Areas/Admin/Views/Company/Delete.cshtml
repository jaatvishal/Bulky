@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-body-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">

            <div class="border p-3 mt-4">
                <div class="row pb-2 ">
                    <h2 class="text-primary">Delete Product</h2><hr />
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title"  disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>

                    
                </div>
                <div clas="form-floating py-2 col-12">
                    <label asp-for="Description" disabled class="form-control border-0 shadow"></label>
                    <input asp-for="Description" class="ms-2" />
                    
                </div>

                <div clas="form-floating py-2 col-12">
                    <label asp-for="ISBN" disabled class="form-control border-0 shadow"></label>
                    <input asp-for="ISBN" class="ms-2" />
                    
                </div>
                <div clas="form-floating py-2 col-12">
                    <label asp-for="Author" disabled class="form-control border-0 shadow"></label>
                    <input asp-for="Author" class="ms-2" />
                   
                </div>
                <div clas="form-floating py-2 col-12">
                    <label asp-for="Price" disabled class="form-control border-0 shadow"></label>
                    <input asp-for="Price" class="ms-2" />
                   
                </div>
                <div clas="form-floating py-2 col-12">
                    <label asp-for="Price50" disabled class="form-control border-0 shadow"></label>
                    <input asp-for="Price50" class="ms-2" />
               
                </div>
                <div clas="form-floating py-2 col-12">
                    <label asp-for="Price100"  disabled class="form-control border-0 shadow"></label>
                    <input asp-for="Price100" class="ms-2" />
                    
                </div>
                <div clas="form-floating py-2 col-12">
                    <label asp-for="ListPrice" disabled class="form-control border-0 shadow"></label>
                    <input asp-for="ListPrice" class="ms-2" />
                    
                </div>

                <div class="row">
                    <div class="col-6 col-md-3 pt-2">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3 pt-2">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>


